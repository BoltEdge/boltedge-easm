# .env.example
# BoltEdge EASM — Production Environment Variables
# Copy to .env and fill in real values. NEVER commit .env to Git.

# ── Database ─────────────────────────────────────────────────
DB_NAME=easm
DB_USER=easm_user
DB_PASSWORD=          # Generate: openssl rand -hex 16

# ── Flask Backend ────────────────────────────────────────────
SECRET_KEY=           # Generate: python -c "import secrets; print(secrets.token_hex(32))"
CORS_ORIGINS=https://easm.boltedge.co

# ── Frontend (build-time) ───────────────────────────────────
NEXT_PUBLIC_API_BASE_URL=https://easm.boltedge.co/api

# ── External API Keys ───────────────────────────────────────
SHODAN_API_KEY=       # Required. From https://account.shodan.io
RESEND_API_KEY=       # Required. From https://resend.com
GITHUB_TOKEN=         # Optional. For Deep scan GitHub code search
ADMIN_EMAIL=admin@boltedge.co
